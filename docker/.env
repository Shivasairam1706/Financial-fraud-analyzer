# .env or build-args.env
# These variables can be passed at build time using --build-arg VAR=value or from a .env file when using Docker Compose

# Python image to use as base
PYTHON_IMAGE=python:3.10-slim

# User and group IDs for creating non-root user
USER_ID=1000
GROUP_ID=1000

# Virtual environment location
VENV_PATH=/opt/venv

# Python requirements file name (should exist at build context root)
REQUIREMENTS_FILE=requirements.txt

# Jupyter configuration
JUPYTER_PORT=8888
JUPYTER_WORKSPACE_DIR=/home/jupyteruser/work

# Additional environment variables for Streamlit/Slack integration
STREAMLIT_PORT=8501
USE_SLACK=true
SLACK_BOT_TOKEN=
SLACK_CHANNEL=#alerts
